<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textViewHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCollect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collect"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/textViewHelloWorld"
        android:onClick="fromMainToCollectActivity"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give a product"
        app:layout_constraintTop_toBottomOf="@id/buttonCollect"
        android:onClick="fromMainToAddActivity"/>

    <Button
        android:id="@+id/buttonCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Shopping Cart"
        app:layout_constraintTop_toBottomOf="@id/buttonAdd"
        android:onClick="fromMainToCartActivity"/>

    <Button
        android:id="@+id/logButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonCart"
        android:text="Log"
        android:onClick="fromMainToSignInActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>